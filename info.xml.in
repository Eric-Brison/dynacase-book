<?xml version="1.0"?>
<module name="freedom-book" disabled="no" version="@VERSION@" release="@RELEASE@" infopath="http://www.freedom-ecm.org/modules/freedom-book/freedom-book">

  <description>Book family to construct books with chapters.</description>

  <requires>
    <module name="freedom" />
    <module name="freedom-core" version="2.14.1" comp="ge"/>
  </requires>

  <post-install>
    <process command="programs/app_post BOOK I" />
    <process command="programs/record_application BOOK" />
    <process command="programs/app_post BOOK U" />
    <process command="programs/update_catalog" />
  </post-install>

  <post-upgrade>
    <process command="programs/pre_migration BOOK" />
    <process command="programs/app_post BOOK U" />
    <process command="programs/record_application BOOK" />
    <process command="programs/post_migration BOOK" />
    <process command="programs/update_catalog" />
  </post-upgrade>
  <pre-install>
    <check type="phpclass"  class="ZipArchive"><help>Zip class is not present (including in php 5.2)</help></check>
  </pre-install>
  <pre-upgrade>
    <check type="phpclass"  class="ZipArchive"><help>Zip class is not present (including in php 5.2)</help></check>
  </pre-upgrade>

  <changelog>
  	
    <version number="0.2.1" date="2010-09-15">
      <change title="Fix incorporate images" url="http://dev.freedom-ecm.org/versions/show/44"/>        
    </version>
    <version number="0.2.0-4" date="2010-03-03">
      <change title="Added infopath link" />
    </version>

    <version number="0.2.0-3" date="2009-12-28">
      <change title="Removed PHP 5.3 deprecated functions" />
    </version>
  </changelog>

</module>
