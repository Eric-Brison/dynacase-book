<?xml version="1.0"?>
<module name="freedom-book" disabled="no" version="@VERSION@" release="@RELEASE@">

  <description>Book family to construct books with chapters.</description>

  <requires>
    <module name="freedom" />
  </requires>

  <post-install>
    <process command="programs/app_post BOOK I" />
    <process command="programs/record_application BOOK" />
    <process command="programs/app_post BOOK U" />
    <process command="programs/update_catalog" />
  </post-install>

  <post-upgrade>
    <process command="programs/pre_migration BOOK" />
    <process command="programs/app_post BOOK U" />
    <process command="programs/record_application BOOK" />
    <process command="programs/post_migration BOOK" />
    <process command="programs/update_catalog" />
  </post-upgrade>

</module>
